= simple_form_for menu, url: store_menu_path do |f|
  = f.input :menu_date, required: false, label: false, placeholder: "Menu date", input_html: { class: 'datepicker' }
  = f.association :products, as: :check_boxes, label_method: lambda { |product| image(product) }, value_method: :id, input_html: { class: 'image_check_boxes' }  
  = f.button :submit
